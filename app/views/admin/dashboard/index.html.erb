      <div class="card">
        <div class="card-body">
          <h5>Total de Usu치rios</h5>
          <h3><%= @total_users %></h3>
        </div>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5>Total de Admins</h5>
          <h3><%= @admin_count %></h3>
        </div>
      </div>
    </div>
  </div>

  <!-- Bot칚o de Importa칞칚o -->
