<!-- app/views/admin/dashboard/index.html.erb -->

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Painel Admin</h1>
    <%= button_to 'Sair', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
  </div>
  
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5>Total de Usuários</h5>
          <h3><%= @total_users %></h3>
        </div>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5>Total de Admins</h5>
          <h3><%= @admin_count %></h3>
        </div>
      </div>
    </div>
  </div>
  
  <h2 class="mt-4">Usuários Recentes</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Role</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td>
            <%= link_to 'Ver', admin_user_path(user), class: 'btn btn-sm btn-info' %>
            <%= link_to 'Editar', edit_admin_user_path(user), class: 'btn btn-sm btn-warning' %>
            <%= link_to 'Deletar', admin_user_path(user), method: :delete, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%= link_to 'Voltar', root_path, class: 'btn btn-secondary' %>
</div>
