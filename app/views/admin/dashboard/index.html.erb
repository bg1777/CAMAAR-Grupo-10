    <div>
      <strong>游닋 Importar Dados do SIGAA</strong>
      <p class="mb-0 mt-2">Importe turmas e alunos a partir de um arquivo JSON</p>
    </div>
    <%= link_to 'Importar', admin_imports_path, class: 'btn btn-primary' %>
  </div>

  <div class="alert alert-info d-flex justify-content-between align-items-center mt-4" role="alert">
    <div>
      <strong>游늶 Gerenciar Templates de Formul치rios</strong>
      <p class="mb-0 mt-2">Crie e gerencie templates para seus formul치rios</p>
    </div>
    <%= link_to 'Acessar', admin_form_templates_path, class: 'btn btn-primary' %>
  </div>

  <div class="alert alert-info d-flex justify-content-between align-items-center mt-4" role="alert">
    <div>
      <strong>游늶 Gerenciar Formul치rios</strong>
      <p class="mb-0 mt-2">Crie e atribua formul치rios para suas turmas</p>
    </div>
    <%= link_to 'Acessar', admin_forms_path, class: 'btn btn-primary' %>
  </div>

  <h2 class="mt-4">Usu치rios Recentes</h2>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <span class="badge bg-<%= user.role == 'admin' ? 'danger' : 'primary' %>">
                <%= user.role %>
              </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>