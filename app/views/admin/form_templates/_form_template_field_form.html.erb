<div class="card field-item p-3 mb-3 shadow-sm">
  <div class="row">
    <!-- Position -->
    <div class="col-md-3 mb-3">
      <label class="form-label fw-semibold">Posi√ß√£o</label>
      <%= f.number_field :position, class: "form-control", min: "1", placeholder: "1" %>
    </div>

    <!-- Field Type -->
    <div class="col-md-4 mb-3">
      <label class="form-label fw-semibold">Tipo de Campo</label>
      <%= f.select :field_type, 
          ['text', 'textarea', 'email', 'number', 'date', 'select', 'radio', 'checkbox'], 
          { prompt: 'Selecione' }, 
          class: "form-select" %>
    </div>

    <!-- Required -->
    <div class="col-md-2 mb-3 d-flex align-items-end">
      <div class="form-check">
        <%= f.check_box :required, { class: "form-check-input" } %>
        <label class="form-check-label">
          Obrigat√≥rio?
        </label>
      </div>
    </div>

    <!-- Delete Button -->
    <div class="col-md-3 mb-3 d-flex align-items-end">
      <% if f.object.persisted? %>
        <%= f.hidden_field :_destroy %>
        <button type="button" class="btn btn-sm btn-danger w-100" 
                onclick="this.closest('.field-item').style.opacity='0.5'; this.closest('.field-item').querySelector('[name*=_destroy]').value='1';">
          üóëÔ∏è Deletar
        </button>
      <% else %>
        <button type="button" class="btn btn-sm btn-danger w-100" 
                onclick="this.closest('.field-item').remove()">
          üóëÔ∏è Deletar
        </button>
      <% end %>
    </div>
  </div>

  <!-- Label -->
  <div class="mb-3">
    <label class="form-label fw-semibold">R√≥tulo do Campo</label>
    <%= f.text_field :label, class: "form-control", placeholder: "Ex: Seu Nome" %>
  </div>

  <!-- Options (for select, radio, checkbox) -->
  <div class="mb-3">
    <label class="form-label fw-semibold">Op√ß√µes (JSON)</label>
    <small class="text-muted d-block mb-1">S√≥ para select/radio/checkbox. Exemplo: ["Op√ß√£o 1", "Op√ß√£o 2"]</small>
    <%= f.text_area :options, class: "form-control", rows: 2, placeholder: '["Op√ß√£o 1", "Op√ß√£o 2"]' %>
  </div>
</div>
